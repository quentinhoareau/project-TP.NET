@using ASP.Server.ViewModels
@model CreateAuthorViewModel
@{
    ViewData["Title"] = "Add a book";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Author" asp-action="Insert">
    <div class="input-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
    </div>
    <span asp-validation-for="FirstName" class="text-danger"></span>
    <div class="input-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName"/>
    </div>
    <span asp-validation-for="LastName" class="text-danger"></span>
    <div class="input-group">
        <label asp-for="Books"></label>
        <select asp-for="Books" asp-items="@(new SelectList(Model.AllBooks, "Id", "Name"))" asp-item-value="@Model.Books">
        </select>
    </div>
    <input type="submit" value="Add" style="width: 100%; margin-top: 50px" />
</form>