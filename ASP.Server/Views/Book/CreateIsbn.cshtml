@using ASP.Server.ViewModels
@model CreateBookISBNViewModel
@{
    ViewData["Title"] = "Add a book";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<form asp-controller="Book" asp-action="InsertIsbn">
    <div class="input-group">
        <label asp-for="Isbn"></label>
        <input asp-for="Isbn" />
    </div>
    <span asp-validation-for="Isbn" class="text-danger"></span>
    <input type="submit" value="Add" style="width: 100%; margin-top: 50px" />
</form>